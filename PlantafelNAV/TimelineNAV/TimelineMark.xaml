<UserControl x:Class="PlantafelNAV.TimelineNAV.TimelineMark"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             mc:Ignorable="d" Width="27.5" Height="14.125">
    <DockPanel Height="15">
        <Border Background="#FFF9F9F9" BorderBrush="#FF404040" BorderThickness="1" HorizontalAlignment="Left" VerticalAlignment="Top" Padding="2" DockPanel.Dock="Top" Height="10" Width="28">
            <TextBlock x:Name="text" FontFamily="Consolas" FontSize="8" HorizontalAlignment="Left" VerticalAlignment="Top" FontWeight="Bold" Margin="-3,-3,-3,-1" Height="9" Width="28" TextAlignment="Center">00:00</TextBlock>
        </Border>
        <Rectangle DockPanel.Dock="Bottom" Height="4" Width="1" Fill="#FF404040" HorizontalAlignment="Left" />
    </DockPanel>
</UserControl>
